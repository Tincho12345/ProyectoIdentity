@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav ml-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        <li>
            <a class="nav-link text-white"> Hola, @UserManager.GetUserName(User)</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" method="post" class="form-check-inline" asp-controller="Cuentas" asp-action="SalirAplicacion">
                <button type="submit" class="btn nav-link">Salir</button>
            </form>
        </li>
    }else
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Cuentas" asp-action="Registro">Registrarse</a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Cuentas" asp-action="Acceso">Acceso</a>
        </li>
    }
</ul>