@model ProyectoIdentity.Models.ViewModels.RecuperaPasswordVM
@{
    ViewData["Title"] = "Recuperar Password";

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="h-100 bg-dark">
    <div class="row">
        <div class="col-8 offset-2">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/css/bootstrap.min.css">
            <script src="https://use.fontawesome.com/f59bcd8580.js"></script>
            <div class="container">
                <div class="row m-5 no-gutters shadow-lg">
                    <h3 class="pb-3 text-white">Recuperar Password</h3>
                    <div class="col-md-6 d-none d-md-block">
                        <img src="https://images.unsplash.com/photo-1566888596782-c7f41cc184c5?ixlib=rb-1.2.1&auto=format&fit=crop&w=2134&q=80"
                             class="img-fluid" style="min-height:100%;" />
                    </div>
                    <div class="col-md-6 bg-white p-5">                
                        <div class="form-style">
                            <form asp-controller="Cuentas" asp-action="ResetPassword">
                                <!--Código que viene con el Email de Recuperación-->
                                <input asp-for="Code" type="hidden" />

                                <div class="text-danger" asp-validation-summary="All"></div>
                                <div class="form-group pb-3">
                                    <input asp-for="Email" type="email" placeholder="Email" class="form-control"
                                           id="exampleInputEmail1" aria-describedby="emailHelp">
                                    <label class="form-label" asp-for="Email"></label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group pb-3">
                                    <input asp-for="Password" type="password" placeholder="" class="form-control" id="exampleInputPassword1">
                                    <label class="form-label" asp-for="Password"></label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group pb-3">
                                    <input asp-for="ConfirmPassword" type="password" placeholder="" class="form-control">
                                    <label class="form-label" asp-for="ConfirmPassword"></label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="pb-2">
                                    <button type="submit" class="btn btn-dark w-100 font-weight-bold mt-2">Recuperar Cuenta</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}