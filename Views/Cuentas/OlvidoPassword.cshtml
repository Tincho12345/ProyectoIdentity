@model ProyectoIdentity.Models.ViewModels.OlvidoPasswordVM

@{
    ViewData["Title"] = "Olvido de Contraseña";

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="h-100 bg-dark">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://use.fontawesome.com/f59bcd8580.js"></script>
    <div class="container">
        <div class="row m-5 no-gutters shadow-lg">
            <h3 class="pb-3 text-center text-white">Olvido de Contraseña</h3>
            <div class="col-md-6 d-none d-md-block">
                <img src="~/images/olvidopassword.png"
                     class="img-fluid" style="min-height:100%;" />
            </div>
            <div class="col-md-6 bg-white p-5">             
                <div class="form-style">
                    <form asp-controller="Cuentas" asp-action="OlvidoPassword" method="post">
                        <div class="text-danger" asp-validation-summary="All"></div>
                        <div class="form-group pb-3">
                            <input asp-for="Email" type="email" placeholder="Email" class="form-control"
                                   id="exampleInputEmail1" aria-describedby="emailHelp">
                            <label class="form-label" asp-for="Email"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>                       
                        <div class="pb-2">
                            <button type="submit" class="btn btn-dark w-100 font-weight-bold mt-2">Recuperar Contraseña</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}